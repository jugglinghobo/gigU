<div class="page-header">
  <div class="row">
    <div class="col-md-2">
      <div class="h1">
        Events
      </div>
    </div>
    <div class="col-md-10">
      <%= render 'filter' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to "By Date", '#by-date', data: { toggle: 'tab' } %></li>
      <li><%= link_to "By Location", '#by-location', data: { toggle: 'tab' } %></li>
    </ul>
  </div>
  <div class="col-md-10">
    <div class="tab-content">
      <div class="tab-pane active" id='by-date'>
        <%= render 'by_date', events: @events %>
      </div>
      <div class="tab-pane" id='by-location'>
        <%= render 'by_location', events: @events %>
      </div>
    </div>
  </div>
</div>

