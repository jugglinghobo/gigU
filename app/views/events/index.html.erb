<div class="page-header">
  <h1>all Events by Date</h1>
</div>

<div class="events">
  <% @events.upcoming.group_by(&:date).each do |date, date_events| %>
    <div class="col-md-12">
      <h3><%= date.strftime('%d.%m.%Y') %></h3>
    </div>
    <% date_events.each do |event| %>
    <div class="event">
      <div class="col-xs-1">
        <%= link_to event.location, event.location %>
      </div>
      <div class="col-xs-11">
        <%= link_to event, event.link, target: :_blank %>
      </div>
    </div>
    <% end %>

  <% end %>
</div>
