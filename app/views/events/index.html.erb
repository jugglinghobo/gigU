<div class="page-header">
  <h1>all Events by Date</h1>
</div>

<%- @events.all.group_by(&:date).each do |date, date_events| %>
  <h3><%= date %></h3>
  <div class="date-events">
    <% date_events.each do |event| %>
      <div class="event">
        <strong><%= event.location %>:</strong>
        <%= event.name %>
      </div>
    <% end %>
  </div>
<% end %>
