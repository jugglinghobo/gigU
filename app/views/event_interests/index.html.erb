<div class="page-header">
  <h1>
    My Interests
    <div class="pull-right">
      <%= link_to "Organize Interests", current_profile, class: 'btn btn-default' %>
    </div>
  </h1>
</div>

<div class="row">
  <div class="col-md-2">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to "By Date", '#by-date', data: { toggle: 'tab' } %></li>
      <li><%= link_to "By Location", '#by-location', data: { toggle: 'tab' } %></li>
    </ul>
  </div>
  <div class="col-md-10">
    <div class="tab-content">
      <div class="tab-pane active" id='by-date'>
        <%= render 'events/by_date', events: @events %>
      </div>
      <div class="tab-pane" id='by-location'>
        <%= render 'events/by_location', events: @events %>
      </div>
    </div>
  </div>
</div>
